/* pages/me/me.wxss */
.container{padding-top:10rpx;background-color: #FCFBFC;padding-bottom:20rpx;}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  width:690rpx;
  height:180rpx;
  margin:0 auto;
  box-shadow:0rpx 0rpx 5rpx 5rpx #f5f5f5;
  position:relative;
  border-radius: 12rpx;
}
.userinfo navigator{  display: flex;flex-direction: row;align-items: center;width:100%;height:auto}
.userinfo button{width:100%;height:180rpx;line-height:180rpx;font-size:28rpx;color:#454545;}
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #666;
  font-size:28rpx;
  margin-left:20rpx;
}
.more{width:17rpx;height:28rpx;position:absolute;top:40%;right:20rpx;}
.userImg{width:690rpx;height:auto;margin:0rpx auto 0;overflow: hidden;}
/* .userImg .user-left{flex:1;width:48%;margin-right:20rpx;}
.userImg .user-left image{width:100%;height:460rpx;display: block;border-radius: 12rpx;} */
.userImg .user-right{width:100%;height:460rpx;overflow: hidden; }
.userImg .user-right image:nth-child(3n-2){width:345rpx;height:100%;display: block;border-radius: 12rpx;float:left;margin-right:20rpx;margin-top:20rpx;}
.userImg .user-right image{width:324rpx;height:225rpx;border-radius: 12rpx;float:left;margin-top:20rpx;}
.userImg .user-right image:nth-child(3n){margin-top:10rpx;}
.users{margin-top:20rpx;}
.more-img{width:690rpx;height:90rpx;line-height:90rpx;margin:30rpx auto 0;background-color: #FCFBFC;font-size:32rpx;color:#C53D43;}

button[type=default] {
color:#C53D43;
background-color:#FCFBFC;
box-shadow:0rpx 0rpx 5rpx 5rpx #f5f5f5;
border-radius: 12rpx;
font-family:PingFang SC;
font-weight:400;
}
.more-img::after{border:0;}

.page__hd{
  width:690rpx;height:auto;margin:15rpx auto 0;border-radius: 12rpx;background-color:#FCFBFC; box-shadow:0rpx 0rpx 5rpx 5rpx #f5f5f5;
}




/* 弹框 */
.model{width:100%;height:100%;position:fixed;z-index:9999;top:0;left:0;background: rgba(0,0,0,0.5); visibility:hidden; opacity:0;
  transition:opacity .3s;}
.model .mode-content{width:560rpx;height:auto;background-color: #fff;text-align: center;position:absolute;top:30%;left:13%;padding-top:46rpx;border-radius: 20rpx;}
.modelImg{width:64rpx;height:64rpx;margin:0 auto;display: block;}
.title{font-size:30rpx;color:#000;margin-top:34rpx;display: block;}
.confim{height:98rpx;border-top:1rpx solid #E6E6E6;margin-top:58rpx;display: flex;align-items: center;}
.confim text{flex:1;height:100%;line-height:98rpx;}
.confim .quxiao{border-right:1rpx solid #ddd;}
.show-dialog{  visibility:visible;opacity:1;}


