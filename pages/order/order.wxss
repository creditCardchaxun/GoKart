/* pages/order/order.wxss */
.page{background-color: #F5F5F5;}
.weui-navbar{background-color: #FCFBFC;border-bottom:0;box-shadow:5rpx 0 5rpx 5rpx #ECECED;}
.weui-navbar__title{font-family:PingFang SC;font-weight:400;font-size:30rpx;}
.weui-navbar__item.weui-bar__item_on{
  background-color: #FCFBFC;
  color:#C53D43;
  font-size:32rpx;
}
.weui-navbar__item{color:#666;font-size:32rpx;}
.wei-nav{background-color: #F5F5F5;display: flex;align-items: center;width:710rpx;margin:0 auto;text-align: center;}
.weui-item{flex: 1;padding:25rpx;color:#666;}
.weui-item.item_on{color:#C53D43;}
.weui-navbar__title02{font-size:28rpx;}

.tuan{width:710rpx;padding:0 20rpx;border-radius: 12rpx;background-color: #fff;margin:0 auto;box-sizing: border-box;margin-bottom:20rpx}
.active_02{width:100%;height:auto;overflow: hidden;}
.active02{width:auto;padding:0 20rpx;float:left;margin-top:30rpx;}
.userinfo-avatar{width:43rpx;height:43rpx;float:left;margin-right:18rpx;border-radius: 20rpx;}
.userinfo-nickname{color:#666666;font-size:24rpx;line-height:43rpx;float:left;margin-right:18rpx;}
.userinfo-qi{width:34rpx;height:31rpx;float:left;margin-top:8rpx;}
.endTime{width:auto;height:auto;float:right;margin-top:26rpx;padding:5rpx;background-color: #FEF263;color:#C53D43;font-size:24rpx;}
.tuan_02{width:100%;height:325rpx;margin-top:30rpx;overflow: hidden;}
.tuan_02 .tuanImg{width:100%;height:325rpx;border-radius: 20rpx;}
.tuan_03{width:auto;height:50rpx;color:#666666;font-size:30rpx;display: flex;align-items:center;justify-content:space-between;margin-top:30rpx;}
.tuanleft{color:#666666;font-size:30rpx;width:50%;height:45rpx;line-height:45rpx;overflow:hidden;}
.tuanright{color:#C53D43;font-size:20rpx;width:50%;text-align: right;}
.tuan_03 text{padding:8rpx;border:1rpx solid #C53D43;color:#C53D43;font-size:20rpx;margin-left:20rpx;border-radius: 8rpx;}
.tuan_04{color:#999999;font-size:24rpx;margin:20rpx 0;}
.tuan_05{width:auto;height:auto;overflow: hidden;padding:22rpx 0;border-top:1rpx solid #ddd; }
.tuan_05 image{width:32rpx;height:32rpx;float:left;padding-top:12rpx;}
.tuan_05 button{width:auto;height:58rpx;line-height:58rpx;background-color:rgba(197,61,67,1);border:1rpx solid transparent;border-radius:8rpx;color:#fff;font-size:24rpx;float:right;}


.model{width:100%;height:100%;position:fixed;z-index:9999;top:0;left:0;background: rgba(0,0,0,0.5); visibility:hidden; opacity:0;
  transition:opacity .3s;}
.model .mode-content{width:560rpx;height:auto;background-color: #fff;text-align: center;position:absolute;top:30%;left:13%;padding-top:46rpx;border-radius: 20rpx;}
.modelImg{width:60rpx;height:54rpx;margin:0 auto;display: block;}
.title{font-size:30rpx;color:#000;margin-top:34rpx;display: block;}
.confim{height:98rpx;border-top:1rpx solid #E6E6E6;margin-top:58rpx;display: flex;align-items: center;}
.confim text{flex:1;height:100%;line-height:98rpx;}
.confim .quxiao{border-right:1rpx solid #ddd;}

.show-dialog{  visibility:visible;opacity:1;}



