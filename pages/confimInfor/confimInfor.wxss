/* pages/confimInfor/confimInfor.wxss */
.container{background-color: #FCFBFC;}
.confim{width:auto;padding:0 20rpx;background-color: #fff;}
.weui-input{text-align: right;margin-right:20rpx;}
.weui-label{
  width:130px;
  font-size:28rpx;
  color:#454545;
}
.weui-select{
  text-align: right;
  color:#454545;
}
.weui-cell__bd{
  font-size:28rpx;
}
.weui-select{
  border-right:0;
}
.weui-btn-area button{border-radius: 45rpx;background-color: #C53D43;color:#fff;font-size:32rpx;}
/* .weui-btn-area button[type=default]{border:1rpx solid transparent;background-color:#f5f5f5;} */
.weui-btn-area button:after{ border: none; }


/* 弹框 */
.model{width:100%;height:100%;position:fixed;z-index:9999;top:0;left:0;background: rgba(0,0,0,0.5); visibility:hidden; opacity:0;
  transition:opacity .1s;
  }
.model .mode-content{width:560rpx;height:auto;background-color: #fff;text-align: center;position:absolute;top:30%;left:13%;padding-top:46rpx;border-radius: 20rpx;}
.modelImg{width:64rpx;height:64rpx;margin:0 auto;display: block;}
.title{font-size:30rpx;color:#000;margin-top:34rpx;display: block;}
.confimss{height:98rpx;border-top:1rpx solid #E6E6E6;margin-top:58rpx;display: flex;align-items: center;}
.confimss text{flex:1;height:100%;line-height:98rpx;border-left:1rpx solid #ddd;}
/* .confimss .quxiao{border-right:1rpx solid #ddd;} */
.confimss .quxiao{flex:1;background-color:transparent;
}
.confimss button:after{ border: none; }
.show-dialog{  visibility:visible;opacity:1;}

