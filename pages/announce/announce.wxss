/*swtich整体大小及背景色*/
.wx-switch-input{
    width:60rpx !important;
    height:38rpx !important;
    background: #35BAF2 !important;
    border:#35BAF2 !important; /* 2018-07-18 重置开关边框颜色 */
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:60rpx !important;
    height: 38rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 30rpx !important;
    height: 38rpx !important;
}


